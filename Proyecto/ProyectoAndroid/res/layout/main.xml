<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" 
    android:background="#333333">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="PFC"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/configHorario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horarioGPS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Configurar Horario" />

    <Button
        android:id="@+id/configGPS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configHorario"
        android:layout_centerHorizontal="true"
        android:text="Configurar GPS" />

    <ToggleButton
        android:id="@+id/horarioGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/configHorario"
        android:layout_alignRight="@+id/configHorario"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="34dp"
        android:textOff="GPS"
        android:textOn="HORARIO" />

    <Button
        android:id="@+id/actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/configGPS"
        android:layout_alignRight="@+id/configGPS"
        android:layout_below="@+id/configGPS"
        android:text="Actualizar" />

</RelativeLayout>